@model IEnumerable<Shiverleih.Models.shop.ViewModels.RentalView>

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Verleihen", "RentProduct")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductTitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductTitle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.RentalID }) |
            @Html.ActionLink("Details", "Details", new { id = item.RentalID }) |
            @Html.ActionLink("Zurückgeben", "ReturnProduct", new { id = item.RentalID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.RentalID })
        </td>
    </tr>
}

</table>
